- model_class = Dictionary
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:bigram) + ':'
  %br
  = @dictionary.bigram
%p
  %strong= model_class.human_attribute_name(:count) + ':'
  %br
  = @dictionary.count
%p
  %strong= model_class.human_attribute_name(:weight) + ':'
  %br
  = @dictionary.weight


= link_to t('.back', :default => t("helpers.links.back")), dictionaries_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_dictionary_path(@dictionary), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), dictionary_path(@dictionary), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
