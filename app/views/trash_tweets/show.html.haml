- model_class = TrashTweet
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:long) + ':'
  %br
  = @trash_tweet.long
%p
  %strong= model_class.human_attribute_name(:lat) + ':'
  %br
  = @trash_tweet.lat
%p
  %strong= model_class.human_attribute_name(:user_screen_name) + ':'
  %br
  = @trash_tweet.user_screen_name
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @trash_tweet.text
%p
  %strong= model_class.human_attribute_name(:tweet_created_at) + ':'
  %br
  = @trash_tweet.tweet_created_at
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @trash_tweet.user_id


= link_to t('.back', :default => t("helpers.links.back")), trash_tweets_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_trash_tweet_path(@trash_tweet), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), trash_tweet_path(@trash_tweet), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
