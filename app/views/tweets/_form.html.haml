= simple_form_for @tweet, :html => { :class => 'form-horizontal' } do |f|
  = f.input :long
  = f.input :lat
  = f.input :user_screen_name
  = f.input :text
  = f.input :tweet_created_at
  = f.input :user_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), tweets_path, :class => 'btn btn-default'
